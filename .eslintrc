{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "$": false
    },
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": ["off"],
        "func-names": ["error", "never"],
        "global-require": ["off"],
        "max-len": ["error", 120, 4, {
            "ignoreUrls": true,
            "ignoreComments": false,
            "ignoreRegExpLiterals": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
          }],
        "no-param-reassign": ["error", { "props": false }],
        "no-use-before-define": ["error", { "functions": false}],
        "no-underscore-dangle": ["error", { "allow": ["_ddm"] }]
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
